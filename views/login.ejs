<% include partials/header.ejs %>
<link rel="stylesheet" href="stylesheets/main.css">

<body class="login">
  <div class="wrap">

  <% if (message.length > 0) { %>
    <div class = "alert alert-danger text-center">
    <%= message %>
    </div>
  <% } %>


  <div class="container-fluid logPage">
    <div class="logo">
      <a href="/"><img src="http://i.imgur.com/1Z1ANnS.png?1" alt=""></a>
    </div>
    <div class="logLead">
      Log in to your Foodmon Account!
    </div>



    <form action="/login" method = "post">
      <input type="text" class="yourName" placeholder="Username"   name="username" id="username" autofocus>
      <input type="password" class="yourPass" placeholder="Password"name="password" id="password">
      <input type="submit" value="Log in!" class = "log">
      <a href="/signup" style="color:#94C3EA;">Don't have an account? Create one here</a>
     </form>
  </div>


<% include partials/footer.ejs %>
